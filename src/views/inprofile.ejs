<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= instructor.name %> Profile</title>
    <link rel="stylesheet" href="/styles/inprofile.css">
</head>
<body>
    <!-- Unique Header for Instructor -->
    <header class="instructor-header">
        <div class="profile-image">
            <img src="<%= instructor.profileImage %>" alt="<%= instructor.name %> Profile Picture">
        </div>
        <div class="instructor-info">
            <h1><%= instructor.name %></h1>
            <p><%= instructor.title %></p>
        </div>
    </header>

    <!-- Main Section -->
    <main>
        <!-- About Section -->
        <section class="about-section">
            <h2>About</h2>
            <p><%= instructor.about %></p>
        </section>

        <!-- New Courses Section -->
        <section class="new-courses-section">
            <h2>New Courses</h2>
            <div class="courses-grid" id="newCourses">
                <% newCourses.forEach(course => { %>
                    <div class="course-card">
                        <a href="<%= course.link %>">
                            <img src="<%= course.image %>" alt="<%= course.name %>">
                            <h3><%= course.name %></h3>
                        </a>
                        <p><%= course.price %></p>
                    </div>
                <% }); %>
            </div>
        </section>

        <!-- All Courses Section -->
        <section class="all-courses-section">
            <h2>All Courses</h2>
            <div class="courses-grid" id="allCourses">
                <% allCourses.forEach(course => { %>
                    <div class="course-card">
                        <a href="<%= course.link %>">
                            <img src="<%= course.image %>" alt="<%= course.name %>">
                            <h3><%= course.name %></h3>
                        </a>
                        <p><%= course.price %></p>
                    </div>
                <% }); %>
            </div>
        </section>

        <!-- Add Course Button -->
        <section class="add-course-section">
            <button class="add-course-button" onclick="redirectToAddCourse()">Add New Course</button>
        </section>
    </main>

    <!-- Unique Footer for Instructor -->
    <footer>
        <div class="footer-nav">
            <a href="#">Copyright</a>
            <a href="#">Terms of Service</a>
            <a href="#">Privacy Policy</a>
        </div>
    </footer>

    <script src="/scripts/inprofile.js"></script>
</body>
</html>
